@model IEnumerable<WebApplication.Models.Photo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                Photo
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <img class="img-fluid" style="object-fit:fill" src="@Url.Action("File", "Photos", new { id = item.PhotoID })" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PhotoID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PhotoID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PhotoID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
